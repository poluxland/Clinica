<h2>Listado de alumnos</h2>

<table class="table table-striped table-hover">
  <thead class="table-info">
    <tr>
      <th>Email</th>
      <th>RUT</th>
      <th>Telefono</th>
      <th>Appellido paterno</th>
      <th>Apellido materno</th>
      <th>Nombres</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.rut %></td>
        <td><%= user.telefono %></td>
        <td><%= user.apellido_paterno %></td>
         <td><%= user.apellido_materno %></td>
        <td><%= user.nombres %></td>
        <td><%= user.role %></td> <!-- Assuming you're storing roles as integers and have corresponding string representations -->
        <td>
          <%= link_to user, class: 'btn btn-sm btn-primary' do %>
            <i class="bi bi-eye-fill"></i>
          <% end %>
           <%= link_to edit_user_path(user), class: "btn btn-sm btn-success", title: "Edit" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
           <%= link_to "", user_path(user), data: { turbo_confirm: "Â¿Estas seguro?", turbo_method: :delete }, method: :delete, class: "btn btn-sm btn-danger bi bi-trash-fill" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
